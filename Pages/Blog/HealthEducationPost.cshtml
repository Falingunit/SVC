@page
@model HealthEducationPostModel

@{
    ViewData["Title"] = "Blog Post Details";
}

<h1 class="title text-center">
    <span class="text-muted display-1">Health Education Post:</span><br />
    @Model.BlogPost.Title
    <img />
</h1>
<div class="container-fluid">
    <img src="@Model.BlogPost.BannerImagePath" style="width: 100%; height: 200px; object-fit: cover; object-position: 50% 50%;" />
</div>
<div class="container" style="margin-top: 2rem;">
    <div>@Html.Raw(Model.BlogPost.Content)</div>
    <p><small>@Model.BlogPost.DateCreated</small></p>
    <a class="nav-link navbar-colored navbar-colored-with-bg" style="width: max-content" asp-page="./HealthEducationIndex">See all posts</a>
</div>