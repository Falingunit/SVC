@page
@model HealthEducationIndexModel

@{
    ViewData["Title"] = "Health Education Posts";
    Layout = "~/Pages/Shared/_Layout.cshtml";

    IList<Models.BlogPost> GetPostsInReversedOrder()
    {
        return Model.BlogPosts.Reverse().ToList();
    }
}

<head>
    <link rel="stylesheet" type="text/css" href="~/css/healtheducationindex.css" />
</head>

<div class="container">
    <h1 class="title text-center">Health Education</h1>
</div>
<div class="container" style="margin-top: 2rem;">
    <h1>Recent Posts:</h1>
    <div class="grid">
        @foreach (var item in GetPostsInReversedOrder())
        {
            if (item.DateCreated > DateTime.Now.AddDays(-7))
            {
                <div class="page-container" style="position: relative">
                    <p class="text-muted">@item.DateCreated</p>
                    <h2 class="display-2" style="font-weight: 500 !important; margin-top: 1rem">@item.Title</h2>
                    <hr />
                    <div class="" style="height: 200px; width: 100%; overflow: hidden;">
                        <img src="@item.BannerImagePath" style="width: 100%; height: 100%; object-fit: cover; object-position: center;" />
                    </div>                    
                    <p class="text-start">@item.Gist</p>
                    <a asp-page="./HealthEducationPost" asp-route-id="@item.Id"><span class="div-link"></span></a>
                </div>
            }
        }
    </div>
</div>