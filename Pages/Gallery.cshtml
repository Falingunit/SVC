@page
@model SVC.Pages.GalleryModel
@{
    ViewData["Title"] = "Gallery";
    Layout = "Shared/_Layout.cshtml";
}

<head>
    <link rel="stylesheet" type="text/css" href="css/gallery.css">
    <link rel="" type="text/js" href="js/gallery.js">
</head>

<main name="main">
    <div class="container">
        <h1 class="text-center title">Gallery</h1>

        <!-- Example of two gallery instances -->
        @foreach (var album in Model.GalleryService.Albums){
            <h2 style="margin-top: 2rem;">@album.name:</h2>

            <div class="gallery-instance">
                <div class="gallery-container d-flex justify-content-center align-items-center position-relative">
                    <div class="gallery position-relative overflow-hidden">
                        @{
                            var images = album.images;
                            for (int i = 0; i < images.Count(); i++)
                            {
                                var image = images.ElementAt(i);
                                <div class="gallery-item position-absolute">
                                    <img class="gallery-image" itemid="@i" src="~/images/@image.Path" />
                                    <div class="caption">@image.Description</div>
                                </div>
                            }
                        }
                    </div>
                </div>
                <div class="thumbnail-list d-flex justify-content-center mt-3">
                    @{
                        for (int i = 0; i < images.Count(); i++)
                        {
                            var image = images.ElementAt(i);
                            <img class="thumbnail-image mx-2" itemid="thumb-@i" src="~/images/@image.Path" style="width: 50px; height: auto; cursor: pointer;" />
                        }
                    }
                </div>
            </div>
        }
    </div>
</main>

<script src="js/gallery.js"></script>
